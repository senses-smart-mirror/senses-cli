{
  "name": "@senses-mirror/senses-cli",
  "description": "CLI tool for work with the Senses - Smart Mirror. Able to install the Smart Mirror software or create and provision custom widgets.",
  "version": "1.0.7",
  "author": "Senses - Smart Mirror software",
  "bin": {
    "senses": "./bin/run"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": "https://github.com/senses-smart-mirror/senses-cli/issues",
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.3",
    "@rdalogic/ping": "^1.1.0",
    "ansi-regex": ">=6.0.1",
    "archiver": "^5.3.0",
    "axios": "^0.21.4",
    "chalk": "^4.1.2",
    "copy-template-dir": "^1.4.0",
    "debug": "^4.3.2",
    "enquirer": "^2.3.6",
    "execa": "^5.1.1",
    "listr": "^0.14.3",
    "oclif": "^2.2.0",
    "set-value": ">=4.0.1",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/archiver": "^5.1.1",
    "@types/chai": "^4.2.21",
    "@types/debug": "^4.1.7",
    "@types/listr": "^0.14.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^14.17.5",
    "chai": "^4.3.4",
    "eslint": "^5.16.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-oclif-typescript": "^0.1.0",
    "globby": "^10.0.2",
    "mocha": "^10.1.0",
    "nyc": "^14.1.1",
    "prettier": "2.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10",
    "yarn-or-npm": "^3.0.1"
  },
  "engines": {
    "node": ">=14.17.5"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src/templates"
  ],
  "homepage": "https://github.com/senses-smart-mirror/senses-cli",
  "keywords": [
    "senses",
    "smart-mirror",
    "senses-cli",
    "smart-mirror-cli"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "senses",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "senses-smart-mirror/senses-cli",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
